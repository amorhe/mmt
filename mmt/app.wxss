/**app.wxss**/
.container {
  font-size: 24rpx;
  color: #333
} 
.swipe_box {
  width: 100%;
  height: 365rpx
}
.swiper_div {
  height: 100%;
}
.slide-image {
  width: 100%;
  height: 100%
}
.border_weight {
 border-bottom: 14rpx #f7f7f7 solid;
}
.line_green {
  width: 5rpx;
  height: 42rpx;
  background: #45bf23;
  border-radius: 5rpx;
}
.line_white {
  width: 5rpx;
  height: 42rpx;
  background: #fff;
  border-radius: 5rpx;
}
.company_info_up {
  height: 92rpx;
  border-bottom: 1rpx #eee solid;
  display: flex;
  align-items: center;
  padding-left: 28rpx;
  box-sizing: border-box; 
}
.company_info_title {
  font-size: 34rpx;
  margin-left: 18rpx;
}

.product_list {
  padding: 15rpx 50rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap
}
.product_list>view {
  background: #fff;
  margin-bottom: 20rpx;
  width:48.6%;
  height: 350rpx;
  box-shadow: 0 0 5rpx 5rpx #ddd;
  border-radius: 10rpx;
  position: relative

}
.product_list image {
  width: 96%;
  height: 96%;
  margin: 2%;
  border-radius: 10rpx;
}
.product_name {
  position: absolute;
  width: 284rpx;
  height: 60rpx;
  background: rgba(255, 255, 255,.6);
  font-size: 30rpx;
  text-align: center;
  line-height: 60rpx;
  bottom: 14rpx;
  left: 14rpx;
}
.sanjiao {
  width: 0;
  height: 0;
  border-width: 10rpx 10rpx 0; 
  border-color: #d2d2d2 transparent transparent;
  border-style:solid;
  margin-left: 5rpx;
}
.sanjiaoOut {
  width: 0;
  height: 0;
  border-width: 0 10rpx 10rpx; 
  border-color:  transparent transparent #d2d2d2;
  border-style:solid;
  margin-left: 5rpx;
}
