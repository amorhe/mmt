/* pages/public/alertView/index.wxss */
.wx-mask-view {
  position: fixed;
  z-index: 1000;
  top: 0;
  left:0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, .4)
}
.wx-alertview {
  position: fixed;
  z-index: 2000;
  width: 80%;
  max-width: 580rpx;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%,-50%);
  transform: translate(-50%,-50%);
  background: #fff;
  text-align: center;
  border-radius: 4rpx;
  overflow: hidden
}
.wx-alert-title {
  font-size: 36rpx;
  padding: 30rpx 15rpx 15rpx 15rpx;
}
.wx-alert-content {
  padding: 15rpx 15rpx 15rpx;
  min-height: 60rpx;
  font-size: 30rpx;
  line-height: 1.2;
  word-wrap: break-word;
  word-break: break-all;
  color: #888;
}
.wx-alert-footer {
  display: flex;
  align-items: center;
  position: relative;
  line-height: 80rpx;
  font-size: 34rpx;
}
.wx-alert-footer::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1rpx;
  border-top: 1rpx solid #d5d5d6;
  color: #d5d5d6;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5)
}
.wx-alert-btn {
  display: block;
  -webkit-flex:1;
  flex: 1;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  position: relative
}
.wx-alert-footer .wx-alert-btn:nth-of-type(1){
  color: #353535
}
.wx-alert-footer .wx-alert-btn:nth-of-type(2){
  color: #f46c59
}
.wx-alert-footer .wx-alert-btn:nth-of-type(2)::after{
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 1rpx;
  bottom: 0;
  border-top: 1rpx solid #d5d5d6;
  color: #d5d5d6;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5)
}
.wx-alert-image {
  width: 100%;
}


.backdrop {
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, .5);
  position: fixed;
  left: 0;
  top: 0;
  z-index: 100;
}
.backdrop+view {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 1000
}
